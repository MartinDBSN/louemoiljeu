<div class='page-container'>
  <div class='header-banner'>
    <h1>Browse games</h1>
  </div>

  <div class="index-list">
    <% @games.each do |game| %>
      <%= link_to game_path(game), class: "game-card" do %>
          <h3>
            <%= game.name %>
          </h3>
          <h4>
            <%= game.platform %>
          </h4>
      <% end %>
    <% end %>
  </div>
</div>
<%= link_to "test", game_path(1) %>
