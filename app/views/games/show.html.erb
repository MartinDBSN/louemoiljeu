<div class = "container-game-show">
  <div class = "big-container-show">
    <img class="game-image" src="https://media.istockphoto.com/id/1208386205/vector/joystick-flat-icon-playing-online-gamepad-cartoon-icon-game-controller.jpg?s=612x612&w=0&k=20&c=0UCu7wJNNjJpIaUXe6zyLLXEk3ZX2onolq5aBrbQQY8=" alt="Game image">
    <div class="container-text-show">
          <h1 style="font-family:syne;font-weight:bold"><%= @game.name.upcase %></h1>
          <div class="mt-0">
            <div class="d-inline p-2 bg-primary text-white rounded"><%= @game.platform.upcase %></div>
            <div class="d-inline p-2 bg-dark text-white rounded"><%= @game.genre.upcase %></div>
            <div class="d-inline p-2 bg-warning text-dark rounded"><%= @game.price %> â‚¬/day</div>
            <div class="game-description">
              <p>Description of the game</p>
            </div>
            <div class="container-calendar">
              <%= form_with url: book_game_path(@game), method: :post do |f| %>
                <label for="start_date">Start Date:</label>
                <%= f.text_field :start_date, id: "start_date", class: "flatpickr", data: { controller: "datepicker" } %>
                <label for="end_date">End Date:</label>
                <%= f.text_field :end_date, id: "end_date", class: "flatpickr", data: { controller: "datepicker" } %>
                <button type="submit" class="book-btn" style="font-family:syne;font-weight:bold">BOOK THIS GAME</button>
              <% end %>
            </div>
      </div>
    </div>
  </div>
